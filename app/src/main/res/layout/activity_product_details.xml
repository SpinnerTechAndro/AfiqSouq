<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/backBtn"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_baseline_arrow_back_24" />

                        <TextView

                            android:id="@+id/header_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:ems="15"
                            android:fontFamily="@font/sf_pro"
                            android:maxLines="1"
                            android:text="@string/categories"
                            android:textAllCaps="false"
                            android:textColor="@color/textColor"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView_discover_cart"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/cart_icon" />

                        <TextView
                            android:id="@+id/textview_discover_cartNumber"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_above="@+id/imageView_discover_cart"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/shape_round_cyan"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1sdp">

                <RelativeLayout
                    android:id="@+id/Relativelayout_productdetail_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="@dimen/_2sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:elevation="8dp"

                        app:cardCornerRadius="13dp">

                        <com.github.chrisbanes.photoview.PhotoView
                            android:id="@+id/main_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <!--                <ImageView-->
                        <!--                    android:id="@+id/Imageview_productdetail_enlarge"-->
                        <!--                    android:layout_width="30dp"-->
                        <!--                    android:layout_height="30dp"-->
                        <!--                    android:background="@drawable/shape_round_white"-->
                        <!--                    android:padding="7dp"-->
                        <!--                    android:visibility="gone"-->
                        <!--                    android:src="@drawable/enlarge_icon" />-->

                        <!--                <ImageView-->
                        <!--                    android:id="@+id/Imageview_productdetail_share"-->
                        <!--                    android:layout_width="30dp"-->
                        <!--                    android:layout_height="30dp"-->
                        <!--                    android:layout_marginLeft="10dp"-->
                        <!--                    android:background="@drawable/shape_round_white"-->
                        <!--                    android:padding="5dp"-->
                        <!--                    android:src="@drawable/share_icon" />-->

                        <!--                <ImageView-->
                        <!--                    android:id="@+id/Imageview_productdetail_favourite"-->
                        <!--                    android:layout_width="30dp"-->
                        <!--                    android:layout_height="30dp"-->
                        <!--                    android:layout_marginLeft="10dp"-->
                        <!--                    android:background="@drawable/shape_round_white"-->
                        <!--                    android:padding="5dp"-->
                        <!--                    android:src="@drawable/icon_heart"-->
                        <!--                    android:visibility="gone" />-->

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="77dp"
                    android:layout_marginTop="240dp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/image1_container"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/Imageview_productdetail_image1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_rect_gray"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/image2_container"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/Imageview_productdetail_image2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_rect_gray"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/image3_container"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/Imageview_productdetail_image3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_rect_gray"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </RelativeLayout>

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/Textview_productDetail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="@dimen/_8sdp"

                android:fontFamily="@font/sf_pro"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="2dp"
                android:text="@string/demo_text"
                android:textAlignment="viewStart"
                android:textColor="#0E153D"
                tools:ignore="RtlCompat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Button_productDetail_additionalInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_rect_white"
                    android:fontFamily="@font/sf_pro"
                    android:gravity="center"
                    android:text="@string/additional_info"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/cyan" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Button_productDetail_review"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_rect_deep_blue"
                    android:backgroundTint="@color/gray4"
                    android:fontFamily="@font/sf_pro"
                    android:text="@string/reviews"
                    android:textAllCaps="false"
                    android:textColor="#0E153D"
                    app:backgroundTint="@color/gray5" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/ElegantNUmberButton_productDetail_quantity"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    app:backGroundColor="@color/cyan"

                    app:initialNumber="1" />

                <TextView
                    android:id="@+id/Textview_productDetail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="34dp"
                    android:fontFamily="@font/sf_pro"
                    android:text="$150.00"
                    android:textColor="@color/cyan"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/colorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Color:"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/colorList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sizeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Size :"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/size_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_productDetail_addToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/cyan"
        android:fontFamily="@font/sf_pro"
        android:text="@string/add_to_cart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/cyan"
        app:cornerRadius="9dp" />
</RelativeLayout>