<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container"
    android:background="#F8F9FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/Imageview_shoppingcartfr_cancel"
            android:layout_width="20dp"
            android:layout_marginStart="5dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_close_trns" />

        <androidx.cardview.widget.CardView

            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="15dp" >

            <ImageView
                android:layout_width="80dp"
                android:scaleType="centerCrop"
                android:id="@+id/cardview_shoppcartfr_productImage"
                android:layout_height="80dp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_shoppingcartfr_productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blue silk flare slived top"
                android:textColor="@color/deep_blue"
                android:textSize="14sp"
                android:ems="10"
                android:ellipsize="marquee"
                android:minLines="1"
                android:textStyle="bold" />

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/elegantNumberButton_shoppingcartfr_quantity"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                app:backGroundColor="@color/cyan"
                app:initialNumber="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_shoppingcartfr_price"
            android:layout_width="71dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="$150.00"
            android:textColor="@color/deep_blue"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
