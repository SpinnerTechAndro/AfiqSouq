<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/backBtn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Details"
                        android:textAllCaps="false"
                        android:gravity="center_horizontal"
                        android:textColor="@color/textColor"
                        android:id="@+id/header_title"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ems="15"
                        android:layout_centerInParent="true" />

                    <ImageView
                        android:id="@+id/imageView_discover_cart"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="invisible"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/cart_icon"
                        />

                    <TextView
                        android:id="@+id/textview_discover_cartNumber"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/shape_round_cyan"
                        android:text="0"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dp"
                        android:layout_above="@+id/imageView_discover_cart"/>

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:backgroundTint="#E4FFFC"
            android:background="@drawable/shape_rect_gray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <EditText
                android:id="@+id/textview_shoppingcart_couponNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Coupon "
                android:background="@null"
                android:inputType="text"
                android:textColorHint="@color/gray3"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/cyan"
                android:textSize="16sp"
                android:clickable="true"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableStart="@drawable/coupon"
                android:fontFamily="@font/sf_pro"
                android:layout_marginLeft="20dp"
                android:focusable="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_shoppingcart_applyCoupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn_applycoupon"
                android:layout_marginStart="80.27dp"
                android:backgroundTint="@color/cyan"
                android:text="@string/apply_coupon"
                android:textAllCaps="false"
                app:backgroundTint="@color/cyan"
                android:textColor="@color/white"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/recyclerview_shoppingcart_cartItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            />

        <View
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@color/gray3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="140dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/subtotal"
                android:textColor="@color/deep_blue"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/textview_shoppingcart_subtotal_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$450.00"
                android:textColor="@color/deep_blue"
                android:textAllCaps="true"
                android:layout_marginLeft="73dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="140dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tax"
                android:textColor="@color/deep_blue"/>

            <TextView
                android:id="@+id/textview_shoppingcart_shippingfee_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$20.00"
                android:textColor="@color/deep_blue"
                android:textAllCaps="true"
                android:layout_marginLeft="73dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="140dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Charge"
                android:textColor="@color/deep_blue"/>

            <TextView
                android:id="@+id/deliveryCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/deep_blue"
                android:textAllCaps="true"
                android:layout_marginLeft="73dp"/>


        </LinearLayout>

        <View
            android:layout_width="222dp"
            android:layout_height="1dp"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="12dp"
            android:background="@color/gray3"
            android:layout_marginRight="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="140dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="@string/total"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/cyan" />

            <TextView
                android:id="@+id/textview_shoppingcart_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textStyle="bold"
                android:textColor="@color/cyan"
                android:textAllCaps="true"
                android:layout_marginLeft="112dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:layout_marginLeft="140dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/discount"
                android:textColor="@color/deep_blue"/>

            <TextView
                android:id="@+id/textview_shoppingcart_discount_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.0"
                android:textColor="@color/deep_blue"
                android:textAllCaps="true"
                android:layout_marginLeft="112dp"/>


        </LinearLayout>

        <View
            android:layout_width="222dp"
            android:layout_height="1dp"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="12dp"
            android:background="@color/gray3"
            android:visibility="invisible"
            android:layout_marginRight="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:layout_marginLeft="140dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total       "
                android:textColor="@color/cyan"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/textview_shoppingcart_tobe_paid_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textColor="@color/cyan"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginLeft="112dp"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_shoppingcart_checkoutd"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:text="@string/checkout"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="16sp"
            app:backgroundTint="@color/cyan"
            android:background="@drawable/resetpass_btn_rect"/>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>