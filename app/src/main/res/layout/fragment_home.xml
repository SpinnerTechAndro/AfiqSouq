<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/nestedScrollView"
    android:isScrollContainer="true"
    android:measureAllChildren="true"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/edittext_search_searchitem"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/shape_rect_white"
            android:drawableLeft="@drawable/search"
            android:drawableTint="@color/gray6"
            android:hint="    e.g.kids shoe"
            android:backgroundTint="@color/gray7"
            android:layout_gravity="center"
            android:textColorHint="@color/gray6"

            android:layout_marginTop="8dp"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            android:layout_margin="12dp"
            android:background="#FFFFFF">
            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:background="@color/grey"
                app:sliderAnimationDuration="800"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"

                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorSelectedColor="@color/cyan"
                app:sliderIndicatorUnselectedColor="@color/white"
                app:sliderScrollTimeInSec="3"
                app:sliderStartAutoCycle="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_category"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textview_viewall_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_all"
                android:layout_marginTop="6dp"
                android:textColor="@color/cyan"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:layout_marginEnd="5dp"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_featured"
            android:layout_width="match_parent"
            android:layout_height="245dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top_product"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/textview_viewall_newarrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_all"
                android:textColor="@color/cyan"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="188dp"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_new_arrival"
            android:layout_width="match_parent"
            android:layout_height="245dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electronics"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/textview_viewall_electronics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_all"
                android:textColor="@color/cyan"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="188dp"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_electronics"
            android:layout_width="match_parent"
            android:layout_height="245dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health &amp; Beauty"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/textview_viewall_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_all"
                android:textColor="@color/cyan"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="188dp"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_health"
            android:layout_width="match_parent"
            android:layout_height="245dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/products"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/textview_viewall_all_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_all"
                android:textColor="@color/cyan"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:textAlignment="textEnd"
                android:layout_marginLeft="188dp"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24" />

        </LinearLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_Product"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="@dimen/_90sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <com.github.ybq.android.spinkit.SpinKitView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Large.ThreeBounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/_50sdp"
                app:SpinKit_Color="@color/colorAccent" />


        </FrameLayout>


    </LinearLayout>



</androidx.core.widget.NestedScrollView>