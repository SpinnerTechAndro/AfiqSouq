<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/deep_blue"
    tools:context=".ProductsDetails">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/deep_blue">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageview_productDetail_back"
                    android:layout_width="16dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/btn_back_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias=".9" />

                <TextView
                    android:id="@+id/textView_shoppingcart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="108dp"
                    android:layout_marginRight="108dp"
                    android:text="Nice sneakers for fashion..."
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintStart_toEndOf="@+id/imageview_sign_up_exit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.929" />

                <ImageView
                    android:id="@+id/imageView_cart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.917"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/cart_icon_1"
                    tools:layout_editor_absoluteY="18dp"
                    tools:ignore="MissingConstraints,VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textview_productDetail_cartNumber"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/shape_round_cyan"
                    android:text="3"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_shoppingcart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.95"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/Relativelayout_productdetail_dashboard"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/shape_rect_gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/Imageview_productdetail_enlarge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/enlarge_icon"
                android:padding="7dp"
                android:background="@drawable/shape_round_white"
                />

            <ImageView
                android:id="@+id/Imageview_productdetail_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/share_icon"
                android:padding="5dp"
                android:background="@drawable/shape_round_white"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:id="@+id/Imageview_productdetail_favourite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_heart"
                android:padding="5dp"
                android:background="@drawable/shape_round_white"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="77dp">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/Imageview_productdetail_image1"
                    android:layout_width="65dp"
                    android:layout_height="75dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/shape_rect_gray"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/Imageview_productdetail_image2"
                    android:layout_width="65dp"
                    android:layout_height="75dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/shape_rect_gray"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/Imageview_productdetail_image3"
                    android:layout_width="65dp"
                    android:layout_height="75dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/shape_rect_gray"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/Textview_productDetail_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demo_text"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/Button_productDetail_additionalInfo"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_rect_white"
            android:text="@string/additional_info"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/Button_productDetail_review"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_rect_deep_blue"
            android:text="@string/reviews"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/Button_productDetail_aboutBrand"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_rect_white"
            android:text="@string/about_brand"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp">

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/ElegantNUmberButton_productDetail_quantity"
            android:layout_width="100dp"
            android:layout_height="35dp"/>

        <TextView
            android:id="@+id/Textview_productDetail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$150.00"
            android:textSize="20sp"
            android:textColor="@color/cyan"
            android:textStyle="bold"
            android:layout_marginLeft="34dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp">

        <RadioGroup
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp">

            <RadioButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_round_purple"/>

        </RadioGroup>

        <RadioGroup
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp">

            <RadioButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_round_lightgreen"/>

        </RadioGroup>

        <RadioGroup
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp">

            <RadioButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_round_cyan"/>

        </RadioGroup>

        <RadioGroup
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp">

            <RadioButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_round_orange"/>

        </RadioGroup>

        <TextView
            android:id="@+id/textview_productDetail_size_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/deep_blue"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/textview_productDetail_size_M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/deep_blue"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textview_size_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/deep_blue"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textview_productDetail_size_XL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XL"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/deep_blue"
            android:layout_marginLeft="10dp"/>

        <TextView
        android:id="@+id/textview_productDetail_size_XXL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXL"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/deep_blue"
        android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_productDetail_addToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/shape_round_cyan"
        android:text="@string/add_to_cart"
        android:textColor="@color/white"
        android:textAllCaps="false"/>

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottomNavigation_productDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:mbn_backgroundBottomColor="@color/white"
        app:mbn_circleColor="@color/cyan" />

</LinearLayout>