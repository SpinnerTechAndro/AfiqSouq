<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/deep_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/Imageview_shoppingcartfr_cancel"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/btn_close_trns" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_shoppcartfr_productImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_shoppingcartfr_productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue silk flare slived top"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/elegantNumberButton_shoppingcartfr_quantity"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                app:finalNumber="10"
                app:initialNumber="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_shoppingcartfr_price"
            android:layout_width="71dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="$150.00"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
