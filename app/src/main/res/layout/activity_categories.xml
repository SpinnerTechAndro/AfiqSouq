<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriesActivity">

    <RelativeLayout
        android:id="@+id/toolbarRL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_2sdp"
        >

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_accent"
            android:background="@null"
            android:layout_centerVertical="true"
            android:id="@+id/backIB"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="@dimen/_17sdp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            />

        <RelativeLayout
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            >

            <ImageButton
                android:id="@+id/addTocartIB"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/cart_icon"
                android:layout_centerVertical="true"
                android:background="@null"
                />
            <TextView
                android:layout_marginStart="@dimen/_25sdp"
                android:id="@+id/countCartItemIV"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="1"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:background="@drawable/circleable_background"

                />

        </RelativeLayout>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categories_RV"
        android:layout_below="@id/toolbarRL"
        android:layout_above="@id/meo_bn"
        android:layout_margin="@dimen/_5sdp"

          />

    <!-- tools:listitem="@layout/categories_row_layout"-->


    <meow.bottomnavigation.MeowBottomNavigation
        android:id="@+id/meo_bn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        />


</RelativeLayout>