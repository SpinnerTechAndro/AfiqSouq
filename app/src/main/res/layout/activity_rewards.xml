<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RewardsActivity">


    <RelativeLayout
        android:id="@+id/toolbarRL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_5sdp">

        <ImageButton
            android:id="@+id/backIB"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_back_accent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Rewards"
            android:textColor="@color/colorBlack"
           android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <RelativeLayout
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">

            <ImageButton
                android:id="@+id/addTocartIB"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@drawable/cart_icon" />

            <TextView
                android:id="@+id/countCartItemTV"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:background="@drawable/circleable_background"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorWhite"

                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/toolbarRL"
        android:layout_width="match_parent"
        android:background="@drawable/reward_background"
        android:layout_height="wrap_content"
        />


    <RelativeLayout
        android:id="@+id/circle_RL"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_below="@id/toolbarRL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"

        android:background="@drawable/white_circle_background"
>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dotted_blue">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/point_tv"
        android:layout_margin="@dimen/_3sdp"
        >
        <ImageView
            android:id="@+id/image_crown"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
           android:layout_gravity="center_vertical"
            android:background="@drawable/icon_crown"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/star_icon"
            android:layout_toStartOf="@id/image_crown"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            />

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/star_icon"
            android:layout_toEndOf="@id/image_crown"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            />
    </RelativeLayout>

        <TextView
            android:id="@+id/point_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_25sdp"
            android:text="264"
            android:layout_centerInParent="true"
            android:textColor="@color/cyan"
            android:textStyle="bold"
            />

        <TextView
            android:layout_below="@id/point_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points available"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBlack"
            />

</RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/button_ll"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_below="@id/circle_RL"
        >

        <Button
            android:id="@+id/button_reedme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/_5sdp"
            android:text="Reedme"
            android:textColor="@color/cyan"
            android:textAllCaps="false"
            android:background="@drawable/reedem_button_shape"
            />
        <Button
            android:id="@+id/button_earn_point"
            android:layout_width="0dp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/earn_point_btn_shape"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_margin="@dimen/_25sdp"
        android:text="10 points for\n every &amp; 100 spend"
        android:layout_below="@id/button_ll"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/cyan"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <RelativeLayout
        android:id="@+id/recent_spending_RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label"
        android:layout_margin="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Recent Spendings"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorBlack" />

        <ImageButton
            android:id="@+id/expand_icon_IB"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_3sdp"
            android:background="@null"
            android:src="@drawable/ic_expand_accent" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@id/recent_spending_RL"
        android:layout_height="wrap_content"
        tools:listitem="@layout/recent_spending_reward_row_layout"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/recent_spending_rv_rewards"
        android:layout_above="@id/bottomNavigation"
        />

    <meow.bottomnavigation.MeowBottomNavigation
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigation"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>